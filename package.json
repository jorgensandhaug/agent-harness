{
  "name": "agent-harness",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "check": "biome check src/",
    "test": "bun test",
    "smoke": "bun run src/smoke.ts",
    "smoke:claude": "bun run src/smoke.ts --provider claude-code",
    "smoke:codex": "bun run src/smoke.ts --provider codex",
    "smoke:pi": "bun run src/smoke.ts --provider pi",
    "smoke:opencode": "bun run src/smoke.ts --provider opencode",
    "smoke:all": "bun run src/smoke.ts --all"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "typescript": "^5.7.0",
    "@types/bun": "^1.2.0"
  }
}
