{
  "name": "agent-harness",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "agent-harness": "./agent-harness"
  },
  "scripts": {
    "dev": "bun run --watch src/cli/main.ts daemon serve",
    "start": "bun run src/cli/main.ts daemon serve",
    "start:receiver": "bun run src/webhook-receiver-cli.ts",
    "inspect": "bun run src/cli/main.ts daemon serve",
    "build": "bun build --compile src/cli/main.ts --outfile dist/ah",
    "build:cli": "bun build --compile src/cli/main.ts --outfile dist/ah",
    "build:receiver": "bun build --compile src/webhook-receiver.ts --outfile agent-harness-receiver",
    "typecheck": "tsc --noEmit",
    "check": "biome check src/",
    "test": "bun test",
    "smoke": "bun run src/smoke.ts",
    "smoke:claude": "bun run src/smoke.ts --provider claude-code",
    "smoke:codex": "bun run src/smoke.ts --provider codex",
    "smoke:pi": "bun run src/smoke.ts --provider pi",
    "smoke:opencode": "bun run src/smoke.ts --provider opencode",
    "smoke:all": "bun run src/smoke.ts --all"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "yargs": "^18.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "^1.2.0",
    "@types/yargs": "^17.0.35",
    "typescript": "^5.7.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
